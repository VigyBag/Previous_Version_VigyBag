<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MaterialRatingBar.RatingBar" parent="android:Widget.RatingBar">

        <item name="android:indeterminateDrawable">@null</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:maxHeight">36dp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="Widget.MaterialRatingBar.RatingBar.Indicator.Small">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="Theme.VigyBag" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Your application's Primary brand color. -->
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryVariant">@color/ColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Your application's Secondary brand color. -->
        <item name="colorSecondary">@color/ColorSecondary</item>
        <item name="colorSecondaryVariant">@color/ColorPrimarySecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--StatusBar Color, NavigationBar and window Color -->
        <item name="android:statusBarColor">@color/windowBackground</item>
        <item name="android:navigationBarColor">@color/windowBackground</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- Button Theme -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialIconButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton.Icon
        </item>

        <!-- Card Theme -->
        <item name="materialCardViewElevatedStyle">@style/Widget.App.CardView</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Icon" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.OutlinedButton.TextButton</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">21sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="colorContainer">@color/ColorPrimary</item>
        <item name="colorOnContainer">@color/colorOnContainer</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ThemeOverlay.App.OutlinedButton.TextButton" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="colorOnContainer">@color/textColor</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="cardElevation">16dp</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurfaceContainerLow">@color/colorSurfaceContainerLow</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>
</resources>